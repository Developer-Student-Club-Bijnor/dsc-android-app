<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/backgroundcolor"
    android:layout_height="match_parent">

   <TextView
       android:layout_width="match_parent"
       android:id="@+id/texy23"
       android:layout_height="wrap_content"
       android:text="@string/dscfullname"
       android:textSize="30sp"
       android:layout_centerHorizontal="true"
       android:textStyle="bold"
       android:textColor="?attr/textcolor"
       android:textAlignment="center"
       android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imgy"
        android:layout_height="180dp"
        android:layout_below="@+id/texy23"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="103dp"
        android:src="@drawable/dsclogo" />

    <TextView
        android:textColor="?attr/textcolor"
        android:id="@+id/texy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:text="@string/alllogin" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/bty1"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/texy1"
        android:textAllCaps="false" />


    <TextView
        android:textColor="?attr/textcolor"
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="3dp"
        android:layout_below="@id/bty1"
        android:layout_marginTop="30dp"
        android:text="---or---"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic" />
    <Button
        android:id="@+id/bty5"
        android:layout_width="317dp"
        android:textColor="?attr/textcolor"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:background="?attr/buttonround"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Email Login"
        android:textAllCaps="false" />


 <Button
     android:textColor="?attr/textcolor"
        android:id="@+id/bty6"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="?attr/buttonround"
        android:layout_below="@id/bty5"
        android:layout_centerHorizontal="true"
        android:text="Phone Login"
        android:textAllCaps="false" />


</RelativeLayout>