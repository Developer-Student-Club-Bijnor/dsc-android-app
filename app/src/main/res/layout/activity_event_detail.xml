<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_event_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="?attr/back"
            android:id="@+id/tool_event_detail"
            app:titleTextColor="?attr/titleColor"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:background="?attr/backgroundcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@id/toolbar_event_detail"
        android:layout_marginBottom="65dp"
        android:scrollbars="none">

        <RelativeLayout
            android:background="?attr/backgroundcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/e_image_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dsclogo" />

            <LinearLayout
                android:id="@+id/rel_name_e"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/e_image_detail"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/buttonround"
                android:backgroundTint="@color/color_welcome_3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/e_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="Event Name"
                    android:textAlignment="center"
                    android:textColor="?attr/textcolor"
                    android:textSize="30sp" />

                <TextView
                    android:textColor="?attr/textcolor"
                    android:justificationMode="inter_word"
                    android:id="@+id/e_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/e_event_short"
                android:textColor="?attr/textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_name_e"
                android:padding="4dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round"
                android:text="Short Description about the event,"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/e_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@id/e_event_short"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:textColor="?attr/textcolor"
                android:background="@drawable/round"
                android:text=" n cnsb jjdsnjddc dnkc nsd cjsbdcjdbdjc kn "
                android:textAlignment="center"
                android:textSize="16dp" />
        </RelativeLayout>
    </ScrollView>

<Button
android:id="@+id/e_work_button"
    android:textColor="?attr/textcolor"
android:backgroundTint="@color/color_welcome_3"
android:layout_width="match_parent"
android:text="Participate"
android:layout_height="59dp"
android:layout_alignParentBottom="true"
android:layout_marginBottom="0dp"/>
</RelativeLayout>