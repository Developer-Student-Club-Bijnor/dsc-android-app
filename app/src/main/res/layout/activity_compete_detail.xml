<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_compete_detail"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="?attr/back"
            android:id="@+id/tool_compete_detail"
            app:titleTextColor="?attr/titleColor"
            android:layout_width="match_parent"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@id/toolbar_compete_detail"
        android:layout_marginBottom="65dp"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dsclogo"
                android:id="@+id/c_image_detail"/>

            <LinearLayout
                android:id="@+id/rel_name_c"
                android:layout_width="353dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/c_image_detail"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:backgroundTint="@color/color_welcome_2"
                android:background="?attr/buttonround">

                <TextView
                    android:textColor="?attr/textcolor"
                    android:layout_marginTop="3dp"
                    android:id="@+id/c_compete_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Competition Name"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:textColor="?attr/textcolor"
                    android:id="@+id/c_compete_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>
            <TextView
                android:padding="4dp"
                android:id="@+id/c_compete_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_name_c"
                android:textColor="?attr/textcolor"
                android:background="@drawable/round"
                android:text="Short Description about the event,"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/c_compete_description"
                android:background="@drawable/round"
                android:layout_below="@id/c_compete_short"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textColor="?attr/textcolor"
                android:layout_height="wrap_content"
                android:text=" n cnsb jjdsnjdsnjdc jdbcjsbckjnd cksjd cjksdc dnkc nsd cjsbdcjdbdjc kn "
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/c_work_button"
        android:backgroundTint="@color/color_welcome_2"
        android:layout_width="match_parent"
        android:textColor="?attr/textcolor"
        android:text="Participate"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"/>
</RelativeLayout>