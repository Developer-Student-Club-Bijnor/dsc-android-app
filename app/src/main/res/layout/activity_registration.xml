<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_register"
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="?attr/back"
            android:id="@+id/tool_register"
            app:titleTextColor="?attr/titleColor"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_below="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="65dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_txt"
            android:layout_marginTop="15dp"
            android:textColor="?attr/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:text="Please fill this information correctly because this information will be used for certification." />

        <EditText
            android:layout_below="@id/txt_txt"
            android:textColor="?attr/textcolor"
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/comment"
            android:hint="  Name"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:textColor="?attr/textcolor"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname"
            android:justificationMode="inter_word"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Email"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <EditText
            android:textColor="?attr/textcolor"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_below="@id/email"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Mobile No."
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:textColor="?attr/textcolor"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Course"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:textColor="?attr/textcolor"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Year"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="24sp" />

        <EditText
            android:justificationMode="inter_word"
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:layout_below="@id/year"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/comment"
            android:hint="  Branch"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/college"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="?attr/textcolor"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/branch"
            android:background="@drawable/square"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/comment"
            android:hint="  College/University"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/event_name"
            android:maxLines="1"
            android:lines="1"
            android:justificationMode="inter_word"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/college"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Event Name"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/event"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_below="@id/event_name"
            android:textColor="?attr/textcolor"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Category"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/refer_event"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_below="@id/event"
            android:textColor="?attr/textcolor"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:padding="4dp"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/square"
            android:backgroundTint="@color/comment"
            android:hint="  Refferal Code (If any)"
            android:layout_marginTop="15dp"
            android:textSize="24sp" />
    </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_button"
        android:layout_centerHorizontal="true"
        android:background="?attr/buttonround"
        android:layout_marginBottom="10dp"
        android:text="Submit" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e_progress"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>