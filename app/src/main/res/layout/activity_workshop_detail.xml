<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundcolor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_workshop"
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="?attr/back"
            android:id="@+id/tool_workshop"
            app:titleTextColor="?attr/titleColor"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="?attr/backgroundcolor"
        android:layout_marginBottom="65dp"
        android:layout_below="@id/toolbar_workshop"
        android:scrollbars="none"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <ImageView
       android:adjustViewBounds="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/dsclogo"
       android:id="@+id/w_image_detail"/>

    <LinearLayout
        android:id="@+id/rel_name"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_image_detail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:backgroundTint="@color/color_welcome_4"
        android:background="?attr/buttonround">

        <TextView
            android:textColor="?attr/textcolor"
            android:id="@+id/w_workshop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Workshop Name"
            android:textAlignment="center"
            android:textSize="30sp" />
        <TextView
            android:textColor="?attr/textcolor"
            android:id="@+id/w_workshop_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>
    <TextView
        android:textColor="?attr/textcolor"
        android:id="@+id/w_workshop_short"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_name"
        android:background="@drawable/round"
        android:text="Short Description about the event,"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/w_workshop_description_i"
        android:layout_below="@id/w_workshop_short"
        android:layout_marginTop="10dp"
        android:textColor="?attr/textcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text=" n cnsb jjdsnjdsnjdc jdbcjsbckjnd ckjsbdcjdbdjc kn "
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round"
        android:textSize="16dp"/>
</RelativeLayout>
</ScrollView>

    <Button
        android:id="@+id/w_work_button_i"
        android:backgroundTint="@color/color_welcome_4"
        android:textColor="?attr/textcolor"
        android:layout_width="match_parent"
        android:text="Participate"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"/>
</RelativeLayout>