<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:layout_width="match_parent">
    <RelativeLayout
        android:id="@+id/coment_relative_id"
        android:layout_width="match_parent"
        android:background="@drawable/round"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/comment"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/dp_comment"
            android:layout_width="60dp"
            android:layout_marginTop="12dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:textColor="?attr/textcolor"
            android:layout_marginTop="24dp"
            android:id="@+id/name_comment"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/dp_comment"
            android:text="Display Name" />
        <TextView
            android:id="@+id/comment_main"
            android:textColor="?attr/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsc is really doing good things by providing these tech updates to us. These can be consideredas the booster to skills."
            android:layout_below="@id/name_comment"
            android:layout_marginTop="10dp"
            android:textAlignment="gravity"
            android:padding="8dp"
            android:paddingEnd="2dp"
            android:paddingStart="10dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>