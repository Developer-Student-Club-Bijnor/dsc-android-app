<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/toolbar_otp"
        android:layout_width="245dp"
        android:layout_height="165dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/dsclogo"
        android:layout_centerHorizontal="true"
        android:title="OTP Verification"
        tools:visibility="visible" />
        <TextView
            android:id="@+id/text_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_otp"
            android:text="One Time Password"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="?attr/textcolor"
            />

    <TextView
        android:id="@+id/text1_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_otp"
        android:textColor="?attr/textcolor"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:text="We've sent you an OTP(One Time Password) to the given number.It will be detected automatically but if it is not detected you can put it below manually as well. "

        android:textSize="15sp" />
    <EditText
        android:textColor="?attr/textcolor"
        android:id="@+id/edtxt_otp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1_otp"
        android:layout_marginTop="60dp"
        android:hint="Enter OTP"
        android:maxLines="1"
        android:lines="1"
        android:textColorHint="?attr/textcolor"
        android:inputType="number"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/otp_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtxt_otp"
        android:textColor="?attr/textcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textAllCaps="false"
        android:background="?attr/buttonround"/>
    <ProgressBar
        android:id="@+id/otp_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/otp_login"
        android:visibility="gone"
        />


</RelativeLayout>